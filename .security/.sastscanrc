{
    "build_break_rules": {
        "default": {
            "max_critical": 0,
            "max_high": 0,
            "max_medium": 0
        }
    },
    "scan_type": "credscan,bash,yaml",
    "scan_mode": "pr",
    "scan_tools_args_map": {
        "credscan": [
            "gitleaks",
            "--repo-config-path=.security/credscan-config.toml",
            "--path=%(src)s",
            "--leaks-exit-code=0",
            "--redact",
            "--no-git",
            "--format=json"
        ]
    }
}
